package Assignment2;

public class AvgNumUsingArray {
	
	public static void main(String[] args) {
        double[] arry = {1, 2, 3, 4, 5};
        double total = 0;

        for(int i=0; i<arry.length; i++){
        	total = total + arry[i];
        }

        double average = total / arry.length;
       
        System.out.format("The average is: %.2f", average);
    }

}

